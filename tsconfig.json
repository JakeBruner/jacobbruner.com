{
  "extends": "./.svelte-kit/tsconfig.json",
  "exclude": ["game-of-life/*", "static/*", "node_modules/game-of-life/*"],
  "compilerOptions": {
    "baseUrl": ".",
    // "typeRoots": ["node_modules/@types"],
    "paths": {
      "$lib": ["src/lib"],
      "$lib/*": ["src/lib/*"],
      "$components": ["src/components"],
      "$components/*": ["src/components/*"]
    },
    "target": "es2019",

    // "allowJs": true,
    // "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true
  }
  // "include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.svelte", "src/routes/elliptic-curve/curve.ts", "src/routes/elliptic-curve/curve.ts", "src/routes/Computer-Science/+page.server.ts", "global.d.ts"]
}

